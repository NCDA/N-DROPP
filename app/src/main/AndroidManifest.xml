<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.project.vanswa.ndropp" >

    <application>
        <activity
            android:name=".StartGame"
            android:allowBackup="true"
            android:label="@string/title_activity_start_screen"
            android:supportsRtl="true"
            android:theme="@style/AppTheme" >
        </activity>

        <activity
            android:name=".SplashScreen"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:theme="@style/FullscreenActionBarStyle" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".CreateGame"
            android:theme="@style/AppTheme"
            android:label="@string/create_game">
        </activity>
    </application>

</manifest>
