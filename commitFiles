# 
#
# delete the apk if it exists so we don't commit it
if [ -e "N-DROPP/bin/N-DROPP.apk" ]
  then
	echo "removing apk..."
	rm -f N-DROPP/bin/N-DROPP.apk
else
	echo "no apk found"
fi
#
# add all project files
echo "adding project files..."
git add -A N-DROPP/
#
# add resource documents
echo "adding resource documents..."
git add "N-DROPP Source Design.docx"
git add "README.md"
#
#
# display git status
echo ""
git status
