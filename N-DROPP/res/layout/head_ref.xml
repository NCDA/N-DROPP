<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:padding="5dp"
	android:id="@+id/HR_RootView"  >

	<!--  TOP SCREEN NAVIGATION BUTTONS  -->
	<LinearLayout
		android:id="@+id/HR_hLinearNavButtons"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal" 
		android:gravity="center_vertical|right" >
		
		<ImageView
			android:id="@+id/HR_btRulebook"
			android:layout_width="50dp"
			android:layout_height="50dp"
			android:src="@drawable/rulebook"
			android:layout_margin="7dp"
			android:clickable="true" />
		
		<ImageView
			android:id="@+id/HR_btPenalty"
			android:layout_width="50dp"
			android:layout_height="50dp"
			android:src="@drawable/penalty"
			android:layout_margin="7dp"
			android:clickable="true" />

		<ImageView
			android:id="@+id/HR_btSettings"
			android:layout_width="50dp"
			android:layout_height="50dp"
			android:src="@drawable/settings"
			android:layout_margin="7dp"
			android:clickable="true" />
	</LinearLayout>
	<!-- TOP HOME/AWAY SCORES AND LOGOS  -->
	<LinearLayout
		android:id="@+id/HR_hLinearTeams"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/HR_hLinearNavButtons" 
		android:orientation="horizontal"
		android:gravity="center" >
		
		<!--  HOME TEAM LOGO AND ACRONYM  -->
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="fill_parent"
			android:padding="5dp"
			android:id="@+id/HR_vLinearHomeTeam"
			android:orientation="vertical"
			android:layout_gravity="center" >
			
			<TextView
				android:id="@+id/HR_txtHomeTeam"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="Home: "
				android:gravity="center_horizontal" />
			
			<ImageView 
				android:id="@+id/HR_imgHomeLogo"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center" />
		</LinearLayout>
		
		<!-- SCORES LABELS  -->
		<LinearLayout 
			android:layout_width="wrap_content"
			android:layout_height="fill_parent"
			android:padding="5dp"
			android:id="@+id/HR_vLinearScores"
			android:orientation="vertical"
			android:layout_gravity="center_horizontal" >
			
			<TextView
				android:id="@+id/HR_txtScoreLabel"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="Score"
				android:gravity="center_horizontal"	/>
			
			<!--  SIDE BY SIDE SCORES  -->
			<LinearLayout 
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:padding="5dp"
				android:id="@+id/HR_hLinearScores"
				android:orientation="horizontal" >
				
				<TextView 
					android:id="@+id/HR_txtHomeScore"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="0"
					android:layout_margin="7dp"
					android:gravity="center" />
			
				<TextView
					android:id="@+id/HR_txtAwayScore"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="0"
					android:layout_margin="7dp"
					android:gravity="center" />
			</LinearLayout>
		</LinearLayout>
			
		<!--  AWAY TEAM LOGO AND ACRONYM  -->
		<LinearLayout 
			android:layout_width="wrap_content"
			android:layout_height="fill_parent"
			android:padding="5dp"
			android:id="@+id/HR_vLinearAwayTeam"
			android:orientation="vertical"
			android:layout_gravity="center_horizontal" >
			
			<TextView
				android:id="@+id/HR_txtAwayTeam"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="Away: "
				android:gravity="center_horizontal" />
			
			<ImageView 
				android:id="@+id/HR_imgAwayLogo"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center" />
		</LinearLayout>
	</LinearLayout>	<!-- close horizontal home/away team section -->
	
	<!-- GRID LAYOUTS FOR TEAMS -->
	<LinearLayout 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:padding="5dp"
		android:id="@+id/HR_hLinearGrids"
		android:orientation="horizontal"
		android:gravity="center"
		android:layout_below="@+id/HR_hLinearTeams" >
		
		<GridView 
			android:id="@+id/HR_gridHomeTeam"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:layout_margin="5dp"
			android:numColumns="5"
			android:stretchMode="none"
			android:listSelector="#00000000" >
		</GridView>
		
		<GridView 
			android:id="@+id/HR_gridAwayTeam"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:layout_margin="5dp"
			android:numColumns="5"
			android:stretchMode="none"
			android:listSelector="#00000000" >
		</GridView>
	</LinearLayout>
	
	<!-- TIME, TIME BUTTONS, AND WHISTLE BUTTON -->
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:padding="5dp"
		android:id="@+id/HR_hLinearClockAndWhistle"
		android:orientation="horizontal"
		android:gravity="center"
		android:layout_below="@+id/HR_hLinearGrids" >
		
		<!-- GAME CLOCK TEXT AND BUTTONS -->
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="5dp"
			android:id="@+id/HR_vLinearClockInfo"
			android:orientation="vertical" >
			
			<TextView 
				android:id="@+id/HR_txtGameClock"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="00:00:00"
				android:gravity="center_horizontal"
				android:typeface="monospace"
				android:textStyle="bold" />
			
			<!-- SIDE BY SIDE BUTTONS (START/STOP, EDIT, HALFTIME/OVERTIME  -->
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:padding="5dp"
				android:id="@+id/HR_hLinearClockButtons"
				android:orientation="horizontal" >
				
				<Button
					android:id="@+id/HR_btStartPauseResume"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="Start"
	                android:layout_margin="2dp"
	                android:gravity="center"
	                android:clickable="true" />
				
				<Button
	                android:id="@+id/HR_btEditGameClock"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="Edit"
	                android:layout_margin="2dp"
	                android:gravity="center"
	                android:clickable="true" />
				
				 <Button
	                android:id="@+id/HR_btHalftimeOvertime"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_margin="2dp"
	                android:gravity="center"
	               	android:clickable="false" />
				 
			</LinearLayout> <!-- end side-by-side buttons  -->
		</LinearLayout><!-- end game clock text and buttons -->
		
		<Button
			android:id="@+id/HR_btWhistle"
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:text="Whistle"
			android:layout_margin="2dp"
			android:gravity="center"
			android:clickable="true" />
		
	</LinearLayout>	
</RelativeLayout>