<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/PREGAME_broadcast_root"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="horizontal" >
	
	<View
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_weight="1" />
	
	<LinearLayout
		android:id="@+id/PREGAME_layout_broadcast_buttons"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_weight="1"
		android:orientation="vertical"
		android:gravity="center" >
		
		<Button
			android:id="@+id/PREGAME_bt_local"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:text="Local"
			android:onClick="launchHRActivity" />
		
		<Button
			android:id="@+id/PREGAME_bt_bluetooth"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:text="Bluetooth"
			android:onClick="onBluetoothSelected"	/>
	</LinearLayout>
	
	<View
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_weight="1" />
	
</LinearLayout>
