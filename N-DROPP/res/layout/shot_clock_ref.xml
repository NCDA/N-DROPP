<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:padding="5dp"
	android:id="@+id/SCRRootView"
	android:orientation="vertical" >

	<!--  TOP SCREEN NAVIGATION BUTTONS  -->
	<LinearLayout
		android:id="@+id/hLinearNavButtons_SCR"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal" 
		android:gravity="center_vertical|right" >
		
		<ImageButton
			android:id="@+id/imgRulebook"
			android:layout_width="50dp"
			android:layout_height="50dp"
			android:src="@drawable/ic_launcher" />

		<ImageButton
			android:id="@+id/imgSettings"
			android:layout_width="50dp"
			android:layout_height="50dp"
			android:src="@drawable/ic_launcher" />
	</LinearLayout>
	
	<!-- TEAM LOGO, PLAYER GRID, AND PLAYER BUTTONS -->
	<LinearLayout 
		android:id="@+id/hLinearNavButtons_SCR"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal" 
		android:gravity="center" >
		
		<ImageView 
			android:id="@+id/imgTeamLogo"
			android:layout_width="80dp"
			android:layout_height="80dp"
			android:src="@drawable/ic_launcher"
			android:layout_gravity="center_vertical|left" />
		
		<GridView 
			android:id="@+id/gridTeam"
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:gravity="center"
			android:horizontalSpacing="2dp"
			android:padding="10dp"
			android:numColumns="5"
			android:stretchMode="none"	>
		</GridView>
		
		<!-- TEAM MODIFICATION BUTTONS -->
		<LinearLayout 
			android:id="@+id/vLinearPlayerButtons"
			android:layout_width="wrap_content"
			android:layout_height="fill_parent"
			android:orientation="vertical" 
			android:gravity="center" >
			
			<Button
                android:id="@+id/btAddPlayer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:layout_margin="2dp"
                android:gravity="center"
                android:clickable="true" />
			
			 <Button
                android:id="@+id/btRemovePlayer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:layout_margin="2dp"
                android:gravity="center"
               	android:clickable="true" />
		</LinearLayout>
	</LinearLayout> <!-- end logo, grid, and player buttons -->
	
	<!-- CLOCK TEXT, CLOCK BUTTONS, and RESET BUTTON -->
	<LinearLayout
		android:id="@+id/hLinearShotClock"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal" 
		android:gravity="center">
		
		<!-- CLOCK TEXT AND IMMEDIATE BUTTONS -->
		<LinearLayout
			android:id="@+id/vLinearShotClock"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical" 
			android:gravity="center">
			 
			<TextView 
				android:id="@+id/txtShotClock"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="00:00"
				android:gravity="center"/>
			
			<!-- SHOT CLOCK BUTTONS -->
			<LinearLayout 
				android:id="@+id/hLinearSCButtons"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal" 
				android:gravity="center" >
				
				<Button
	                android:id="@+id/btEditSC"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="Edit"
	                android:layout_margin="2dp"
	                android:gravity="center"
	               	android:clickable="true" />
				
				<Button
	                android:id="@+id/btPauseShotClock"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="Pause"
	                android:layout_margin="2dp"
	                android:gravity="center"
	               	android:clickable="true" />
				
			</LinearLayout> <!-- end shot clock edit and pause buttons -->
		</LinearLayout> <!-- end shot clock text and buttons -->
		
		<Button 
			android:id="@+id/btStartReset"
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:text="Start"
			android:layout_margin="2dp"
			android:gravity="center"
			android:clickable="true" />
		
	</LinearLayout>	<!-- end shot clock section -->
	
	<!-- GAME CLOCK -->
	<TextView 
		android:id="@+id/txtSCRGameClock"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="25:00:00"
		android:gravity="center" />

</LinearLayout>